#include "push_swap.h"

void	stickereitor(t_list *stack_a)
{
	int i;
	int list_size;
	t_list *low_node;
	t_list *temp_list;

	list_size = ft_lstsize(stack_a);
	i = 0;
	while(list_size != i)
	{
		temp_list = stack_a;
		low_node = stack_a;
		while(temp_list != NULL)
		{
			if ((*(int*)(low_node->content) > *(int*)(temp_list->content))
				low_node = temp_list;
			temp_list = temp_list->next;
		}
		low_node->sticker = i;
		i++;
	}
}
